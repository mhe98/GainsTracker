<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.gt.gainstracker.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_CreatePlanFragment"
            app:destination="@id/CreatePlanFragment" />

        <action
            android:id="@+id/action_HomeFragment_to_ViewPlanFragment"
            app:destination="@id/ViewPlanFragment" />
    </fragment>

    <fragment
        android:id="@+id/CreatePlanFragment"
        android:name="com.gt.gainstracker.CreatePlanFragment"
        android:label="@string/create_plan_label"
        tools:layout="@layout/fragment_create_plan">

        <action
            android:id="@+id/action_CreatePlanFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />

    </fragment>

    <fragment
        android:id="@+id/ViewPlanFragment"
        android:name="com.gt.gainstracker.ViewPlanFragment"
        android:label="@string/view_plan_label"
        tools:layout="@layout/fragment_view_plan">

        <action
            android:id="@+id/action_ViewPlanFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
</navigation>